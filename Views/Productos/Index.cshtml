@model List<espacioProductos.Producto>

@{
    ViewData["Title"] = "Productos";
}

<div class="container mt-3">
    <h2>Productos</h2>
    <p>
        <a asp-action="Create" class="btn btn-primary">Nuevo Producto</a>
    </p>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">No hay productos registrados.</div>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Descripci√≥n</th>
                    <th class="text-end">Precio</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.idProducto</td>
                        <td>@p.descripcion</td>
                        <td class="text-end">@p.precio.ToString("N2")</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@p.idProducto" class="btn btn-sm btn-secondary">Editar</a>
                            <a asp-action="Delete" asp-route-id="@p.idProducto" class="btn btn-sm btn-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
